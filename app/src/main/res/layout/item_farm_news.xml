<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:id="@+id/preview_image_news"
        android:src="@drawable/pic_default_all"
        android:scaleType="centerCrop"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="标题"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:lines="2"
        android:id="@+id/title_news"
        android:layout_toRightOf="@+id/preview_image_news"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1小时前"
        android:id="@+id/time_news"
        android:layout_toRightOf="@+id/preview_image_news"
        android:layout_alignBottom="@+id/preview_image_news"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="农民日报"
        android:id="@+id/source_news"
        android:layout_alignBottom="@+id/time_news"
        android:layout_alignParentRight="true"/>

</RelativeLayout>