<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/home_gray"
    android:orientation="vertical">

    <cn.org.nercita.agriculturalconsultant.view.TitleBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:TitleText="注册"
        app:isShowBack="true"
        app:isShowTitle="true">
    </cn.org.nercita.agriculturalconsultant.view.TitleBar>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_marginBottom="10dp"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_above="@+id/info"
            android:layout_centerHorizontal="true"
            android:src="@drawable/zgnjtg_logo"/>

        <LinearLayout
            android:id="@+id/info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@drawable/shape_corner_nobg"
            android:orientation="vertical">

            <EditText
                android:id="@+id/regest_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:background="@drawable/shape_corner_nobg"
                android:drawableLeft="@drawable/yonghuming_icon"
                android:drawablePadding="@dimen/dp_10"
                android:hint="请输入用户名"
                android:padding="@dimen/dp_10"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/home_gray"/>

            <EditText
                android:singleLine="true"
                android:id="@+id/regest_nickname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_corner_nobg"
                android:drawableLeft="@drawable/xingming_icon"
                android:drawablePadding="@dimen/dp_10"
                android:hint="请输入用姓名"
                android:padding="@dimen/dp_10"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/home_gray"/>

            <EditText
                android:singleLine="true"
                android:id="@+id/regest_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_corner_nobg"
                android:drawableLeft="@drawable/dianhua_icon"
                android:drawablePadding="@dimen/dp_10"
                android:hint="请输入电话"
                android:padding="@dimen/dp_10"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/home_gray"/>

            <EditText
                android:singleLine="true"
                android:id="@+id/regest_pssword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_corner_nobg"
                android:drawableLeft="@drawable/mima_icon"
                android:drawablePadding="@dimen/dp_16"
                android:hint="请输入密码"
                android:password="true"
                android:padding="@dimen/dp_10"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/home_gray"/>

            <EditText
                android:singleLine="true"
                android:id="@+id/regest_config_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_corner_nobg"
                android:drawableLeft="@drawable/mima_icon"
                android:drawablePadding="@dimen/dp_16"
                android:hint="请再次输入密码"
                android:password="true"
                android:padding="@dimen/dp_10"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/home_gray"/>

            <TextView
                android:textSize="@dimen/sp_19"
                android:id="@+id/regest_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_corner_nobg"
                android:drawableLeft="@drawable/hangye_icon"
                android:drawablePadding="@dimen/dp_10"
                android:hint="请选择类型"
                android:padding="@dimen/dp_10"/>
        </LinearLayout>

        <Button
            android:id="@+id/regest_bt"
            android:textSize="@dimen/sp_18"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/info"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_20"
            android:background="@drawable/shape_regest_btbg_blue"
            android:text="注  册"
            android:textColor="@color/white"/>
    </RelativeLayout>
</LinearLayout>
