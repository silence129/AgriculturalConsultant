<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/pic_default_all"
        android:scaleType="centerCrop"
        android:id="@+id/image_nongzi"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/name_nongzi"
        android:text="农资名称"
        android:lines="1"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_toRightOf="@+id/image_nongzi"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/desc_nongzi"
        android:text="简介"
        android:layout_alignLeft="@+id/name_nongzi"
        android:layout_below="@+id/name_nongzi"
        android:layout_marginTop="10dp"
        android:lineSpacingMultiplier="1.2"
        android:lines="3"/>
</RelativeLayout>