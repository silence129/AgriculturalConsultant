<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <cn.org.nercita.agriculturalconsultant.utils.ImageGallery.ImagePreviewView
        android:id="@+id/iv_preview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center" />

    <net.qiujuer.genius.ui.widget.Loading
        android:id="@+id/loading"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_gravity="center"
        app:gBackgroundColor="@color/white"
        app:gForegroundColor="@color/btn_white_normal"
        app:gForegroundLineSize="1dp" />

    <ImageView
        android:id="@+id/iv_default"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_gravity="center"
        android:contentDescription="@string/app_name"
        android:scaleType="centerInside"
        android:visibility="gone" />

    <!--android:src="@mipmap/ic_preview_split_graph"-->
</FrameLayout>