<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/rel"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <cn.org.nercita.agriculturalconsultant.view.PlaySurfaceViewCopy
            android:id="@+id/sv_detail_vedio"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>
        <ImageView
            android:id="@+id/down"
            android:layout_marginLeft="30dp"
            android:layout_marginBottom="6dp"
            android:layout_alignParentBottom="true"
            android:src="@drawable/down_ck_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:layout_marginBottom="20dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="15dp"
            android:src="@drawable/left_ck_icon"
            android:id="@+id/left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:layout_marginBottom="50dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="30dp"
            android:src="@drawable/up_ck_icon"
            android:id="@+id/up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:layout_marginBottom="20dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="62dp"
            android:src="@drawable/right_ck_icon"
            android:id="@+id/right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:layout_marginBottom="5dp"
            android:layout_marginRight="15dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:src="@drawable/spsx_icon"
            android:id="@+id/zoomin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="45dp"
            android:layout_alignRight="@id/zoomin"
            android:src="@drawable/spfd_icon"
            android:id="@+id/zoomout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
