<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <cn.org.nercita.agriculturalconsultant.view.TitleBar
        app:isShowTitle="true"
        app:TitleText="我的问答"
        app:isShowBack="true"
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></cn.org.nercita.agriculturalconsultant.view.TitleBar>
    <android.support.design.widget.TabLayout
        android:id="@+id/tab"
        android:layout_width="match_parent"
        app:tabTextColor="@color/black"
        app:tabIndicatorColor="@color/title_green"
        app:tabSelectedTextColor="@color/title_green"
        android:layout_height="wrap_content">
    </android.support.design.widget.TabLayout>
    <android.support.v4.view.ViewPager
        android:id="@+id/vp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </android.support.v4.view.ViewPager>

</LinearLayout>
